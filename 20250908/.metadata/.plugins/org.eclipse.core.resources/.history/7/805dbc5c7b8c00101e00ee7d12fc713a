class Book {
	String title;
	int price;
	
	Book(String tit, int pri) {
		title = tit;
		price = pri;
	}
}

public class Code999 {
	
	public static void main(String[] args)
	{
		Book b1 = new Book("Peter Pan", 100);
		Book b2 = new Book("Aladdin", 90);
		System.out.println(b1.title + ", " + b1.price);
		System.out.println(b2.title + ", " + b2.price);
	}
}