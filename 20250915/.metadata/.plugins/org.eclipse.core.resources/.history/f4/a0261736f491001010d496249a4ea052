class Student {
	String name;
	int kor;
	int eng;
	int mat;
	int tot;
	float avg;
	
	public Student(String n, int k, int e, int m) {
		this.name = n;
		this.kor = k;
		this.eng = e;
		this.mat = m;
		tot = kor + eng + mat;
		avg = tot / (float)3;
	}
	public void PrintScore() {
		System.out.println(name + "의 평균 점수는 " + avg + "점 입니다" );
	}
}

public class Code_k1 {

	public static void main(String[] args) {
		Student s1 = new Student("홍길동", 91, 88, 75);
		s1.PrintScore();
	}

}
